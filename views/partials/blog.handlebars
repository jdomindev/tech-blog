<div class="card mt-5 mx-3">
    <a href="/blog/{{id}}" class="text-decoration-none text-dark">  
        <div class="card-header d-flex justify-content-between align-items-center">
            <div><h3 class="m-0">{{blog_title}}</h3></div>
            <div><h5 class="m-0">Posted by {{user.username}} on {{format_date date_created}}</h5></div>
        </div>
        <div class="card-body">
            <h5>{{blog_description}}</h5>
        </div>
    </a>
</div>
