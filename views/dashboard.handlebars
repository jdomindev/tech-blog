<div class="row d-flex justify-content-center">
  <div class="col-md-6">
      <div class="card mt-5 mx-3">
          <div class="card-body">
              <form class="form blog-form">
                  <h2 class="text-center">Create a new blog post</h2>
                  <div class="form-group">
                      <label for="blog-title">Blog Post Title</label>
                      <textarea class="form-control" id="blog-title" rows="1"></textarea>
                  </div>
                  <div class="form-group">
                      <label for="blog-description">Blog Content</label>
                      <textarea class="form-control" id="blog-description" rows="3"></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary mt-3">Submit</button>
              </form>
          </div>
      </div>
  </div>

{{#if blogs.length}}
  <div class="col-md-6 blog-list">
      <div class="card mt-5 mx-3">
        <div class="card-body">
          <h3>Current Blog Posts:</h3>
          {{#each blogs as |blog|}}
            <div class="row mb-2">
              <div class="col-md-8">
                <h4><a href="blog/{{blog.id}}">{{blog.blog_title}}</a></h4>
              </div>
              <div class="col-md-4">
                <button class="btn btn-sm btn-danger blog-delete" data-id="{{blog.id}}">DELETE</button>
                <button class="btn btn-sm btn-success blog-update" data-id="{{blog.id}}">UPDATE</button>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
</div>
<script src="./js/dashboard.js"></script>
<script src="./js/dashboard-update.js"></script>